{
  "name": "simple_world_comm_baseline",
  "description": "Hyperparameter sweep for simple_world_comm_v3 baseline - finding optimal config before transfer experiments",
  "method": "bayes",
  "metric": {
    "name": "summary/best_mean_return",
    "goal": "maximize"
  },
  "parameters": {
    "algorithm": {"value": "actor-critic"},
    "episodes": {"values": [1500, 2000, 2500]},
    "lr": {"values": [0.0001, 0.0003, 0.0005]},
    "entropy_coef": {"values": [0.005, 0.01, 0.02]},
    "baseline_momentum": {"values": [0.9, 0.95]},
    "grad_clip": {"values": [0.5, 1.0]},
    "gae_lambda": {"values": [0.9, 0.95]},
    "value_loss_coef": {"values": [0.5, 1.0]},
    "normalize_rewards": {"value": true},
    "hidden_spec": {
      "values": [
        "256,256",
        "256,256,256",
        "512,256"
      ]
    },
    "seed": {"values": [0, 1, 2]}
  }
}
